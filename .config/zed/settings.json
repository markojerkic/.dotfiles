// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-haiku-latest"
    },
    "version": "2"
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ros√© Pine"
  },

  "project_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "tab_bar": {
    "show": false
  },

  "languages": {
    "Templ": {
      "format_on_save": "on",
      "language_servers": [
        "tailwindcss-language-server",
        "vscode-html-language-server"
      ],
      "inlay_hints": {
        "enabled": true
      }
    }
  },

  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "templ": "html",
          "Templ": "html"
        }
      }
    },
    "jdtls": {
      "initialization_options": {
        "settings": {
          "java": {
            "jdt": {
              "ls": {
                "lombokSupport": {
                  "enabled": true
                }
              }
            },
            "lombokSupport": {
              "enabled": true
            }
          }
        }
      }
    }
  }
}
