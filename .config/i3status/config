# github.com/rafi i3status config

# i3status configuration file
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	colors = true
	color_good = "#a6e3a1"
	color_bad = "#f38ba8"
	color_degraded = "#94e2d5"
	interval = 2
}

order += "wireless wlp2s0"
order += "volume master"
order += "load"
order += "cpu_usage"
order += "disk /"
# order += "disk /media/media"
# order += "ethernet eth0"
order += "battery all"
order += "tztime local"
#order += "ipv6"
#order += "run_watch DHCP"
#order += "run_watch VPN"

volume master {
	format = " ♪: %volume  "
	device = "default"
	mixer = "Master"
	mixer_idx = 0
	# termsyn font
	# format = "À %volume "
}

battery all {
	format = "  %status %percentage %remaining "
	integer_battery_capacity = true
}

load {
	format = " Δ: %1min "
}

cpu_usage {
	format = "   %usage "
}

disk "/" {
	format = " 󱛟  %avail:/ "
}

disk "/media/media" {
	format = " ¨ %avail:m "
}

wireless wlp2s0 {
	format_up = " 󰖩: (%quality at %essid, %bitrate) "
	format_down = " 󰖪  WiFi "
}

ethernet eth0 {
	# if you use %speed, i3status requires root privileges
	format_up =  " Ω: %ip  "
	format_down = " ∅ eth0  "

	# termsyn font
	# format_up =  " ­ %ip "
	# format_down = " Ð eth0 "
}

run_watch DHCP {
	pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
	pidfile = "/var/run/vpnc/pid"
}

tztime local {
#	format = " %h-%d %H:%M ☰ "
	# termsyn font
	format = "   %d. %h, 󰥔 %H:%M "
}

